{
  "name": "clip-scraper",
  "version": "1.0.0",
  "description": "Find and download the most viewed clips from Twitch, Kick, and YouTube",
  "main": "dist/index.js",
  "bin": {
    "clip-scraper": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "watch": "nodemon --exec ts-node src/cli.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "twitch",
    "youtube", 
    "kick",
    "clips",
    "downloader",
    "scraper",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "youtube-dl-exec": "^3.0.22"
  }
}
